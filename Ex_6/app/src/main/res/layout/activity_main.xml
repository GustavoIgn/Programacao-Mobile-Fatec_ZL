<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/hint_input"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/decomporBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_decompor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputNumber"/>

    <TextView
        android:id="@+id/outputCentena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/centena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/decomporBtn"/>

    <TextView
        android:id="@+id/outputDezena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dezena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outputCentena"/>

    <TextView
        android:id="@+id/outputUnidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/unidade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outputDezena"/>

    <TextView
        android:id="@+id/msgTela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/erro_range"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/outputUnidade"/>

</androidx.constraintlayout.widget.ConstraintLayout>